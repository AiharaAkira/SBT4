
public class RSMain4 {

	public static void main(String[] args) {

		// 1+~10 = 55

		// 횟수를 알고 있음
		int a = 0;
		for (int i = 1; i < 11; i++) {
			a += i;
		}
		System.out.println(a);
		System.out.println("____________________________");
		
		//for(반복횟수)
		//while(반복 조건)
		
		//몇가지 더해야 10이 넘나?
		int k = 1;
		int sum = 0;
		while(sum<1000) {
			sum+=k;
			k++;
		}
		System.out.println(k);

	}

}
