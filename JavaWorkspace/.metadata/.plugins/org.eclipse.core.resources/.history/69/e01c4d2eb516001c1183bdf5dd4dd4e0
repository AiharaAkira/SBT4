class Car5 {

	// 은닉화
	private  int privious = 0;
	private  int temp = 0;
	private int speed;// 전역변수

	public int getSpeed() {
		return speed;
	}

	public void upSpeed(int value) {

		if (speed + value > 300) {
			speed = 300;
		}

		else {
			speed += value;
		}

		System.out.println("현재 속도 >> " + speed);
	}

	public void downSpeed(int value) {
		if (speed - value < 0) {
			speed = 0;
		}

		else {
			speed -= value;
		}

		System.out.println("현재 속도 >> " + speed);
	}

	public void setSpeed(int speed) {
		if(speed > 300) {
			this.speed = 300;
		}else {
			this.speed = speed;
		}
		

	}
}

public class EX01_05 {

	public static void main(String[] args) {
		Car5 mycar = new Car5();

		System.out.println(mycar.getSpeed());

		mycar.upSpeed(100);
		mycar.upSpeed(150);

		mycar.setSpeed(5000);
		System.out.println(mycar.getSpeed());

		mycar.downSpeed(1000);

	}
}
