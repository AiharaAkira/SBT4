import java.util.Random;
import java.util.Scanner;

public class RSMain4_Test {

	public static void main(String[] args) {
//		컴퓨터가 0~3 사이 랜덤값
		Random r = new Random();
		int com = r.nextInt(4);
		
		Scanner sc = new Scanner(System.in);
		
		
		//내가 입력한게 컴 숫자랑 일치할때까지 반복(맞추면 끝)
		while(true) {
			
			System.out.println(com);//개발자 용
			
			System.out.print(" 숫자를 입력하세요: ");
			int myNum = sc.nextInt();
			
			if(com == myNum) {
				System.out.println("정답은 :" + com);
				break;
			}
			
			if(com != myNum) {
				System.out.println("땡!");
			}
			
		}
		
		//홀짝
		int powerBall = r.nextInt(2);
		System.out.println(powerBall);
		while(true) {
			
			System.out.print(" 숫자를 입력하세요(1 or 2): ");
			int myNum = sc.nextInt();
			
			if(myNum % 2 == 0 && powerBall % 2 == 0) {
				System.out.println("정답!");
			}else if(myNum % 2 == 1 && powerBall % 2 == 1) {
				System.out.println("정답!");
			}else {
				System.out.println("땡!");
			}
			
		}
		
		//업다운

	}

}
